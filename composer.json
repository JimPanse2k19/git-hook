{
  "name": "spryker/git-hook",
  "description": "Spryker Git hooks",
  "type": "library",
  "license": "MIT",
  "keywords": ["framework", "sniffer", "architecture", "standards"],
  "homepage": "https://spryker.com",
  "authors": [
    {
      "name": "Spryker",
      "homepage": "https://spryker.com"
    }
  ],
  "support": {
    "source": "https://github.com/spryker/git-hook"
  },
  "require": {
    "php": ">=7.2",
    "symfony/process": "^3.0.0 || ^4.0.0 || ^5.0.0",
    "symfony/yaml": "^3.0.0 || ^4.0.0 || ^5.0.0",
    "zendframework/zend-filter": "^2.0.0"
  },
  "require-dev": {
    "phpstan/phpstan": "*",
    "phpmd/phpmd": "*",
    "spryker/code-sniffer": "*",
    "codeception/codeception": "*",
    "sebastian/phpcpd": "*",
    "symfony/var-dumper": "*",
    "sllh/composer-versions-check": "*"
  },
  "autoload": {
    "psr-4": {
      "GitHook\\": "src/GitHook/"
    }
  },
  "scripts": {
    "cs-check": "phpcs --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml -p -s src/",
    "cs-fix": "phpcbf --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml -p src/",
    "phpstan": "vendor/bin/phpstan analyse -c tests/phpstan.neon -l 5 Spryker/Sniffs/ SprykerStrict/Sniffs/"
  }
}
